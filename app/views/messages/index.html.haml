  .main__form
    %form{class: "main__form__new-message"}
      .main__form__new-message__input-box
        %input{placeholder: "type a message", calss: "main__form__new-message__input-box--text"}
        %label{for: "upload-icon", calss: "main__form__new-message__input-box--image"}
          %i{class: "fa fa-image"}
          %input{type: "file", id: "upload-icon"}
      %input{:type => "submit", :value => "Send", class: "main__form__new-message--submit-btn"}  


